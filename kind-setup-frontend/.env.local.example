# Kind Cluster Setup - Frontend Environment Configuration
# Copy this file to .env.local and update the values as needed

# API Configuration
# URL of the backend API server
NEXT_PUBLIC_API_URL=http://localhost:8020

# Development Configuration
# Set to "development" for development mode
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Kind Cluster Setup
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Polling Configuration (in milliseconds)
NEXT_PUBLIC_STATUS_POLL_INTERVAL=5000
NEXT_PUBLIC_TASK_POLL_INTERVAL=2000

# Timeout Configuration (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=60000
NEXT_PUBLIC_DEPLOYMENT_TIMEOUT=300000

# Error Handling
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ERROR_REPORTING_URL=

# Analytics (if needed)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false
