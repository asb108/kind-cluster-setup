{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix", "bugfix"]
    },
    {
      "title": "## ğŸ“š Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["maintenance", "chore", "refactor"]
    },
    {
      "title": "## ğŸ”’ Security",
      "labels": ["security"]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies", "deps"]
    },
    {
      "title": "## ğŸ—ï¸ CI/CD",
      "labels": ["ci", "cd", "github-actions"]
    },
    {
      "title": "## ğŸ¨ UI/UX",
      "labels": ["ui", "ux", "frontend"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["performance", "optimization"]
    },
    {
      "title": "## ğŸ§ª Testing",
      "labels": ["test", "testing"]
    }
  ],
  "ignore_labels": [
    "ignore-for-release",
    "duplicate",
    "question",
    "invalid",
    "wontfix"
  ],
  "sort": "ASC",
  "template": "#{{TITLE}} by @#{{AUTHOR}} in ##{{NUMBER}}",
  "pr_template": "- #{{TITLE}} by @#{{AUTHOR}} in ##{{NUMBER}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "feat(.*)",
      "target": "feature"
    },
    {
      "pattern": "fix(.*)",
      "target": "bug"
    },
    {
      "pattern": "docs(.*)",
      "target": "documentation"
    },
    {
      "pattern": "chore(.*)",
      "target": "maintenance"
    },
    {
      "pattern": "ci(.*)",
      "target": "ci"
    },
    {
      "pattern": "test(.*)",
      "target": "testing"
    },
    {
      "pattern": "perf(.*)",
      "target": "performance"
    },
    {
      "pattern": "refactor(.*)",
      "target": "maintenance"
    },
    {
      "pattern": "style(.*)",
      "target": "ui"
    }
  ],
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+)",
      "target": "- $4"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "main",
    "master",
    "develop",
    "dev",
    "release"
  ]
}
